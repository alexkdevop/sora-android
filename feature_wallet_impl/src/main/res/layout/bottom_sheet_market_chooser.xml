<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_view"
    android:orientation="vertical">

    <View
        android:id="@+id/bottomSheetPin"
        android:layout_width="64dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/x1_2"
        android:background="@drawable/drag_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.Soramitsu.Neu.Semibold.11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/x2"
        android:paddingTop="@dimen/x2"
        android:paddingEnd="@dimen/x2"
        android:paddingBottom="@dimen/x1_5"
        android:text="@string/polkaswap_market_title"
        android:textAllCaps="true"
        android:textColor="?attr/onBackgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/x3"
        android:layout_marginTop="@dimen/x4"
        android:layout_marginEnd="@dimen/x3"
        android:background="?attr/dividerColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info" />

    <LinearLayout
        android:id="@+id/smartWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/divider1">

        <TextView
            android:id="@+id/item_smart"
            style="@style/TextAppearance.Soramitsu.Neu.Light.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x1"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:paddingStart="@dimen/x4"
            android:paddingTop="@dimen/x2"
            android:paddingEnd="@dimen/x4"
            android:paddingBottom="@dimen/x2"
            android:text="@string/polkaswap_smart"
            android:textAllCaps="true"
            android:textColor="?attr/onBackgroundColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tbcWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/smartWrapper"
        tools:visibility="visible">

        <TextView
            android:id="@+id/item_tbc"
            style="@style/TextAppearance.Soramitsu.Neu.Light.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x1"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:paddingStart="@dimen/x4"
            android:paddingTop="@dimen/x2"
            android:paddingEnd="@dimen/x4"
            android:paddingBottom="@dimen/x2"
            android:text="@string/polkaswap_tbc"
            android:textAllCaps="true"
            android:textColor="?attr/onBackgroundColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xykWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tbcWrapper">

        <TextView
            android:id="@+id/item_xyk"
            style="@style/TextAppearance.Soramitsu.Neu.Light.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x1"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:paddingStart="@dimen/x4"
            android:paddingTop="@dimen/x2"
            android:paddingEnd="@dimen/x4"
            android:paddingBottom="@dimen/x2"
            android:text="@string/polkaswap_xyk"
            android:textAllCaps="true"
            android:textColor="?attr/onBackgroundColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        style="@style/TextAppearance.Soramitsu.Neu.Light.15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x4"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginEnd="@dimen/x4"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:textColor="?attr/onBackgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>