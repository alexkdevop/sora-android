<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/x1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/x2"
        android:paddingTop="@dimen/x2"
        android:paddingEnd="@dimen/x2"
        android:paddingBottom="@dimen/x4"
        tools:layout_height="wrap_content">

        <TextView
            android:id="@+id/valBalanceTitle"
            style="@style/TextAppearance.Soramitsu.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="@dimen/x1"
            android:includeFontPadding="false"
            android:text="@string/val_balance_title"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/soraNetworkName"
            style="@style/TextAppearance.Soramitsu.Header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x4"
            android:drawableStart="@drawable/ic_val_gold_24"
            android:drawablePadding="@dimen/x1_5"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/wallet_soranet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/valBalanceTitle" />

        <TextView
            android:id="@+id/soraTokenName"
            style="@style/TextAppearance.Soramitsu.Header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x1"
            android:includeFontPadding="false"
            android:text="@string/val_token"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/soraNetworkName"
            app:layout_constraintStart_toEndOf="@+id/soraNetworkName"
            app:layout_constraintTop_toTopOf="@+id/soraNetworkName" />


        <TextView
            android:id="@+id/ethNetworkName"
            style="@style/TextAppearance.Soramitsu.Header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x4"
            android:drawableStart="@drawable/ic_val_black_24"
            android:drawablePadding="@dimen/x1_5"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/wallet_ethereum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/soraNetworkName" />

        <TextView
            android:id="@+id/ethTokenName"
            style="@style/TextAppearance.Soramitsu.Header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x1"
            android:includeFontPadding="false"
            android:text="@string/val_token"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/ethNetworkName"
            app:layout_constraintStart_toEndOf="@+id/ethNetworkName"
            app:layout_constraintTop_toTopOf="@+id/ethNetworkName" />

        <TextView
            android:id="@+id/soraBalanceField"
            style="@style/TextAppearance.Soramitsu.Header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/unknown_balance"
            app:layout_constraintBottom_toBottomOf="@+id/soraNetworkName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/soraNetworkName"
            tools:text=" 147,939.62" />

        <TextView
            android:id="@+id/erc20BalanceField"
            style="@style/TextAppearance.Soramitsu.Header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/unknown_balance"
            app:layout_constraintBottom_toBottomOf="@+id/ethNetworkName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ethNetworkName"
            tools:text=" 52,634.15" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>