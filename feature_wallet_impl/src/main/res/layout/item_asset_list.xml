<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingStart="@dimen/x2"
    android:paddingEnd="@dimen/x2">

    <ImageView
        android:id="@+id/ivAssetListItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/x1_5"
        android:layout_marginBottom="@dimen/x1_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_eth_30" />

    <TextView
        android:id="@+id/tvAssetListItemName"
        style="@style/TextAppearance.Soramitsu.Paragraph_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAssetListItem"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sora VAL" />

    <TextView
        android:id="@+id/tvAssetListItemAmount"
        style="@style/TextAppearance.Soramitsu.Paragraph_2.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123.4 VAL" />
</androidx.constraintlayout.widget.ConstraintLayout>