<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/baseBackground"
    android:orientation="vertical">

    <jp.co.soramitsu.common.presentation.view.SoraNeuToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="Confirm supply" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/x2"
            android:paddingTop="@dimen/x2_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="56dp">

                <TextView
                    android:id="@+id/poolShareTitle"
                    style="@style/TextAppearance.Soramitsu.Neu.Light.18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_liquidity_pool_share_title" />

                <TextView
                    android:id="@+id/shareOfPool"
                    style="@style/TextAppearance.Soramitsu.Neu.ExtraBold.29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    android:textColor="@color/neu_black_default"
                    tools:text="0.104267%" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <jp.co.soramitsu.feature_wallet_impl.presentation.polkaswap.view.PoolIconsView
                        android:id="@+id/poolIcons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/poolTitle"
                        style="@style/TextAppearance.Soramitsu.Neu.ExtraBold.20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x1"
                        android:textColor="@color/neu_black_default"
                        tools:text="XOR-VAL Pool" />

                </LinearLayout>

                <TextView
                    android:id="@+id/confirmationDescription"
                    style="@style/TextAppearance.Soramitsu.Neu.Light.15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x2"
                    android:layout_marginBottom="@dimen/x1_2"
                    android:gravity="center"
                    tools:text="Output is estimated. If the price changes more than 0.5% your transaction will revert." />

                <jp.co.soramitsu.common.presentation.view.table.RowsView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x2"
                    android:divider="@drawable/line_ver_divider"
                    android:orientation="vertical"
                    android:showDividers="beginning|middle|end"
                    app:rowText1TextAppearance="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    app:rowText2TextAppearance="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    app:rowTitleTextAppearance="@style/TextAppearance.Soramitsu.Neu.Light.15"
                    app:rowType="line"
                    app:rowsBottomPadding="@dimen/x3"
                    app:rowsCount="4"
                    app:rowsTopPadding="@dimen/x2" />

            </LinearLayout>

            <jp.co.soramitsu.common.presentation.view.button.LoadingButton
                android:id="@+id/confirmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/x1"
                android:enabled="false"
                android:text="@string/common_confirm" />

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
