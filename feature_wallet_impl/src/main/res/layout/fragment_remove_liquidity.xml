<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/baseBackground"
    android:orientation="vertical">

    <jp.co.soramitsu.common.presentation.view.SoraNeuToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconRight="@drawable/ic_neu_info_circle"
        app:titleText="@string/remove_liquidity_title" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="@dimen/x2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amountTitle"
                style="@style/TextAppearance.Soramitsu.Neu.Light.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:paddingHorizontal="@dimen/x2"
                android:includeFontPadding="false"
                android:letterSpacing="-0.02"
                android:text="@string/amount_title"
                android:textAllCaps="true"
                android:textColor="?attr/disabledColor"
                app:layout_constraintBottom_toTopOf="@id/tokenCard"
                app:layout_constraintStart_toStartOf="parent"
                tools:textColor="@color/grey_500" />

            <TextView
                android:id="@+id/percentAmountValue"
                style="@style/TextAppearance.Soramitsu.Neu.ExtraBold.29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:paddingHorizontal="@dimen/x2"
                android:includeFontPadding="false"
                android:letterSpacing="-0.02"
                android:text="0"
                android:textAllCaps="true"
                app:layout_constraintBottom_toTopOf="@id/tokenCard"
                app:layout_constraintStart_toStartOf="parent"
                tools:textColor="@color/grey_500" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                app:tickVisible="false"
                app:trackHeight="@dimen/x1"
                app:trackColorActive="?attr/polkaswapPrimary"
                app:trackColorInactive="?attr/dividerColor"
                app:thumbColor="?attr/polkaswapPrimary"
                app:haloColor="?attr/polkaswapPrimaryDark"
                app:thumbRadius="@dimen/x2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_neu_chevron_down" />

            <jp.co.soramitsu.feature_wallet_impl.presentation.polkaswap.view.AssetAmountInputView
                android:id="@+id/fromAssetInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/x1"
                android:paddingHorizontal="@dimen/x2"
                app:title="@string/common_output"
                app:isBalanceVisible="false"
                app:tokenSelectorEnabled="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_add" />

            <jp.co.soramitsu.feature_wallet_impl.presentation.polkaswap.view.AssetAmountInputView
                android:id="@+id/toAssetInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/x2"
                android:layout_marginVertical="@dimen/x1"
                app:isBalanceVisible="false"
                app:tokenSelectorEnabled="false"
                app:title="@string/common_output" />

            <jp.co.soramitsu.common.presentation.view.button.LoadingButton
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/x2"
                android:layout_marginTop="@dimen/x2"
                android:enabled="false"
                android:text="@string/pool_button_remove" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingHorizontal="@dimen/x2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/slippageTitle"
                    style="@style/TextAppearance.Soramitsu.Neu.Light.15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x3"
                    android:layout_marginStart="@dimen/x1"
                    android:layout_marginEnd="@dimen/x1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/polkaswap_slippage_tolerance"
                    android:textAllCaps="true"
                    android:textColor="?attr/disabledColor"
                    app:layout_constraintEnd_toStartOf="@id/slippageValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/slippageValue"
                    style="@style/TextAppearance.Soramitsu.Neu.Regular.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/neu_brand_polkaswap"
                    app:layout_constraintBottom_toBottomOf="@+id/slippageTitle"
                    app:layout_constraintEnd_toStartOf="@+id/slippageOptions"
                    app:layout_constraintTop_toTopOf="@+id/slippageTitle" />

                <soup.neumorphism.NeumorphImageButton
                    android:id="@+id/slippageOptions"
                    style="@style/Widget.Soramitsu.Neu.ImageButton.Common"
                    android:src="@drawable/ic_wallet_settings"
                    android:tint="?attr/tintColorDark"
                    app:layout_constraintBottom_toBottomOf="@+id/slippageTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/slippageTitle"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/detailsTitleWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x3"
                    android:layout_marginStart="@dimen/x1"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/slippageTitle"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/detailsTitle"
                        style="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.02"
                        android:text="@string/polkaswap_details"
                        android:textAllCaps="true"
                        android:layout_weight="1"
                        android:textColor="?attr/polkaswapPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/slippageOptions"
                        tools:text="XOR/VAL" />

                    <soup.neumorphism.NeumorphImageButton
                        android:id="@+id/detailsIcon"
                        style="@style/Widget.Soramitsu.Neu.ImageButton.Common"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_neu_chevron_down"
                        android:tint="?attr/tintColorDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/slippageOptions"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detailsFirstTitle"
                    style="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x2"
                    android:layout_marginHorizontal="@dimen/x1"
                    android:letterSpacing="-0.02"
                    android:textColor="?attr/disabledColor"
                    android:textAllCaps="true"
                    android:text="@string/polkaswap_your_position"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailsTitleWrapper"
                    tools:text="YOUR POSITION (ESTIMATED)L" />

                <jp.co.soramitsu.common.presentation.view.table.RowsView
                    android:id="@+id/rvFirstDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:divider="@drawable/line_ver_divider"
                    android:orientation="vertical"
                    android:showDividers="middle|end"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/x1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsFirstTitle"
                    app:rowText1TextAppearance="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    app:rowText2TextAppearance="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    app:rowTitleTextAppearance="@style/TextAppearance.Soramitsu.Neu.Light.15"
                    app:rowType="line"
                    app:rowsBottomPadding="@dimen/x1"
                    app:rowsCount="3"
                    app:rowsTopPadding="@dimen/x2" />

                <TextView
                    android:id="@+id/detailsSecondTitle"
                    style="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x2"
                    android:layout_marginHorizontal="@dimen/x1"
                    android:letterSpacing="-0.02"
                    android:textAllCaps="true"
                    android:textColor="?attr/disabledColor"
                    android:text="@string/polkaswap_info_prices_and_fees"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvFirstDetails"
                    tools:text="PRICES AND FEES" />

                <jp.co.soramitsu.common.presentation.view.table.RowsView
                    android:id="@+id/rvSecondDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:divider="@drawable/line_ver_divider"
                    android:orientation="vertical"
                    android:showDividers="middle|end"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/x1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsSecondTitle"
                    app:rowText1TextAppearance="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    app:rowText2TextAppearance="@style/TextAppearance.Soramitsu.Neu.Semibold.15"
                    app:rowTitleTextAppearance="@style/TextAppearance.Soramitsu.Neu.Light.15"
                    app:rowType="line"
                    app:rowsBottomPadding="@dimen/x1"
                    app:rowsCount="4"
                    app:rowsTopPadding="@dimen/x2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
