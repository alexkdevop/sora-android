<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/baseBackground"
    android:orientation="vertical">

    <jp.co.soramitsu.common.presentation.view.SoraNeuToolbar
        android:id="@+id/tbAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/about_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/line_ver_divider"
            android:dividerPadding="@dimen/x2"
            android:orientation="vertical"
            android:showDividers="middle">

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acOfficialWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="sora.org"
                app:cellTitleText="@string/about_website" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acGithubSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="App version"
                app:cellLeftIcon="@drawable/ic_github_24"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_source_code" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="twitter.com/sora_xor"
                app:cellLeftIcon="@drawable/ic_twitter"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_twitter" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acYoutube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="youtube.com/sora_xor"
                app:cellLeftIcon="@drawable/ic_youtube"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_youtube" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="instagram.com/sora_xor"
                app:cellLeftIcon="@drawable/ic_neu_instagram"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_instagram" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="medium.com/sora_xor"
                app:cellLeftIcon="@drawable/ic_neu_medium"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_medium" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acWiki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="wiki.sora.org"
                app:cellLeftIcon="@drawable/ic_neu_question"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_wiki" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acTelegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="t.me/sora_xor"
                app:cellLeftIcon="@drawable/ic_tg_24"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_telegram" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acTelegramAnnouncements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="t.me/sora_announcements"
                app:cellLeftIcon="@drawable/ic_neu_wifi"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_announcements" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acTelegramHappiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="t.me/sorahappiness"
                app:cellLeftIcon="@drawable/ic_neu_heart"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_ask_support" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acContactEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellDescriptionText="support@sora.org"
                app:cellLeftIcon="@drawable/ic_email_24"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_contact_us" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acTermsAndConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellLeftIcon="@drawable/ic_neu_ok"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/common_terms_title" />

            <jp.co.soramitsu.common.presentation.view.AboutCellView
                android:id="@+id/acPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellLeftIcon="@drawable/ic_neu_ok"
                app:cellLeftIconTint="?attr/tintColorLight"
                app:cellTitleText="@string/about_privacy" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>