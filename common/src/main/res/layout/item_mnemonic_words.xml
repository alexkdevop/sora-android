<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvLeftPosition"
        style="@style/TextAppearance.Soramitsu.Paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/contentQuaternary"
        tools:text="1"
        tools:textColor="@color/grey_400" />

    <TextView
        android:id="@+id/tvLeftWord"
        style="@style/TextAppearance.Soramitsu.Paragraph_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/x2"
        tools:text="one word" />

    <TextView
        android:id="@+id/tvRightPosition"
        style="@style/TextAppearance.Soramitsu.Paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/contentQuaternary"
        tools:text="6"
        tools:textColor="@color/grey_400" />

    <TextView
        android:id="@+id/tvRightWord"
        style="@style/TextAppearance.Soramitsu.Paragraph_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/x2"
        tools:text="ten word" />

</LinearLayout>