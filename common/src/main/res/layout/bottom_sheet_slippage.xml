<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_card_view"
    android:paddingBottom="@dimen/x2">

    <ImageView
        android:id="@+id/bottomSheetPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1_2"
        android:src="@drawable/ic_bottomsheet_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slippageToleranceTitle"
        style="@style/TextAppearance.Soramitsu.Paragraph_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x2"
        android:layout_marginTop="@dimen/x4"
        android:text="@string/polkaswap_slippage_tolerance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/slippageToleranceInput"
        style="@style/TextAppearance.Soramitsu.Paragraph_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/x1"
        android:layout_marginEnd="@dimen/x2"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/slippageToleranceTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/slippageToleranceTitle"
        app:layout_constraintTop_toTopOf="@+id/slippageToleranceTitle" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/grey_300"
        app:layout_constraintEnd_toEndOf="@id/slippageToleranceInput"
        app:layout_constraintStart_toStartOf="@+id/slippageToleranceTitle"
        app:layout_constraintTop_toBottomOf="@+id/slippageToleranceTitle" />

    <TextView
        android:id="@+id/slippageToleranceInfo"
        style="@style/TextAppearance.Soramitsu.Paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x2"
        android:layout_marginTop="@dimen/x1"
        android:layout_marginEnd="@dimen/x2"
        android:text="@string/polkaswap_slippage_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/firstChip"
        style="@style/TextAppearance.Soramitsu.Paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x2"
        android:layout_marginTop="@dimen/x3"
        android:layout_marginEnd="@dimen/x1"
        android:background="@drawable/background_rounded_grey_100"
        android:gravity="center"
        android:paddingStart="@dimen/x4"
        android:paddingTop="@dimen/x1"
        android:paddingEnd="@dimen/x4"
        android:paddingBottom="@dimen/x1"
        android:text="0.1%"
        android:textColor="@color/brand_pmsblack"
        app:layout_constraintEnd_toStartOf="@+id/secondChip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slippageToleranceInfo" />

    <TextView
        android:id="@+id/lastChip"
        style="@style/TextAppearance.Soramitsu.Paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x2"
        android:background="@drawable/background_rounded_grey_100"
        android:gravity="center"
        android:paddingStart="@dimen/x4"
        android:paddingTop="@dimen/x1"
        android:paddingEnd="@dimen/x4"
        android:paddingBottom="@dimen/x1"
        android:text="1.0%"
        android:textColor="@color/brand_pmsblack"
        app:layout_constraintBottom_toBottomOf="@+id/secondChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/secondChip"
        app:layout_constraintTop_toTopOf="@+id/secondChip" />

    <TextView
        android:id="@+id/secondChip"
        style="@style/TextAppearance.Soramitsu.Paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x1"
        android:background="@drawable/background_rounded_grey_100"
        android:gravity="center"
        android:paddingStart="@dimen/x4"
        android:paddingTop="@dimen/x1"
        android:paddingEnd="@dimen/x4"
        android:paddingBottom="@dimen/x1"
        android:text="0.5%"
        android:textColor="@color/brand_pmsblack"
        app:layout_constraintBottom_toBottomOf="@+id/firstChip"
        app:layout_constraintEnd_toStartOf="@+id/lastChip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/firstChip"
        app:layout_constraintTop_toTopOf="@+id/firstChip" />

</androidx.constraintlayout.widget.ConstraintLayout>