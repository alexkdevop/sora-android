<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#aad0021b">
    <item
        android:id="@android:id/mask"
        android:gravity="center">
        <shape>
            <solid
                android:width="1dp"
                android:color="#aad0021b" />
            <corners android:radius="15dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <item
        android:id="@android:id/background"
        android:gravity="center">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#d0021b" />
            <corners android:radius="15dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</ripple>